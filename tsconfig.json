{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
  },
  "include": [
    "./*.js",
    "src/**/*.ts", 
    "tests/**/*.ts",
  ],
  "exclude": ["node_modules"]
}
